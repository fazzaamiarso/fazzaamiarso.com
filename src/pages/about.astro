      <Image
        src={myImage}
        alt="fazza razaq amiarso"
        class="max-w-72 rotate-3 rounded-md max-sm:w-44 group-hover:rotate-0 transition-transform"
      />
    </div>
    <div class="space-y-8">
      <div>
