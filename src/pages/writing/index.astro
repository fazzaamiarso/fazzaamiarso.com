---
import Layout from "@/layouts/Layout.astro";
import { PinIcon } from "lucide-react";
---

<Layout title="Writings" description="All of my writings">
  <main class="mx-auto space-y-10 pt-24">
    <h2>Writings</h2>
    <div class="grid grid-cols-1 max-md:space-y-8 md:grid-cols-5">
      <section class="col-span-2 max-md:px-4 md:mr-12">
        <div class:list={["max-h-full rounded-md bg-indigo-50/70 p-4", "md:sticky md:top-24"]}>
          <h3 class="flex items-center gap-1 text-xl text-indigo-900">
            <PinIcon className="h-5 w-5 -rotate-3" />Pinned Stuff
          </h3>
          <p class="mt-2 text-sm">Hi! This is part will be added when there are more articles</p>
        </div>
      </section>
      <section class="col-span-3">
        <ul class="">
          {
            Array.from({ length: 30 }).map((_, idx) => {
              return (
                <li class="cursor-pointer border-b px-8 py-8 transition-colors first:border-t hover:bg-indigo-100/20">
                  <span class="text-sm font-semibold text-indigo-800/60">
                    {idx + 1} January 2025
                  </span>
                  <h4 class="mt-1 text-2xl text-indigo-950">
                    Title for the blog. A really long title for the title that should wrap to the
                    below line
                  </h4>
                  <ul class="mt-3 flex items-center gap-2">
                    {["react", "react-native", "typescript"].map((tag) => {
                      return (
                        <li class="rounded-full px-2 py-0.5 text-xs text-indigo-900 ring-1 ring-indigo-200">
                          <span class="">{tag}</span>
                        </li>
                      );
                    })}
                  </ul>
                </li>
              );
            })
          }
        </ul>
      </section>
    </div>
  </main>
</Layout>
